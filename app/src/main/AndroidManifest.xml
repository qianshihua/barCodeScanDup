<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zkc.barcodescan"
    android:versionCode="1"
    android:versionName="1.6.5.13" >
    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="19" />


    <uses-permission android:name="android.permission.INJECT_EVENT" >
    </uses-permission>
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" >
    </uses-permission>
    <uses-permission android:name="android.permission.INTERNET"/>

    <uses-permission android:name="android.permission.VIBRATE" />


    <application
        android:name="util.ContextUtil"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >


        <!-- 按键广播 -->
        <receiver
            android:name="com.zkc.Receiver.RemoteControlReceiver"
            android:permission="com.zkc.keycode" >
            <intent-filter>
                <!--<intent-filter android:priority="1000" />qiansh-->

                <action android:name="com.zkc.keycode" />
            </intent-filter>
        </receiver>
        <!-- 广播接收 -->
        <receiver android:name="com.zkc.Receiver.StartReceiver" >
            <!--<intent-filter android:priority="996" /> qiansh-->
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </receiver>
        <!-- 扫描服务 -->
        <service android:name="com.zkc.Service.CaptureService" >
            <intent-filter>
                <action android:name="com.zkc.Service.CaptureService" />
            </intent-filter>
        </service>
        <activity
            android:name="com.zkc.barcodescan.activity.LoginActivity"
            android:label="@string/app_name"
            android:screenOrientation="locked">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="BarCodeScan" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:scheme="info" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.zkc.barcodescan.activity.ActivityBarcodeSetting"
            android:label="@string/app_name"
            android:screenOrientation="locked" >
        </activity>
        <activity
            android:name="com.zkc.barcodescan.activity.ActivityQrcodeSetting"
            android:label="@string/app_name"
            android:screenOrientation="locked" >
        </activity>
        <activity
            android:name="com.zkc.barcodescan.activity.DialogEncodingActivity"
            android:label="@string/app_name"
            android:screenOrientation="locked" >
        </activity>


        <activity android:name="com.zkc.barcodescan.activity.MainActivity"></activity>
        <activity android:name="com.zkc.barcodescan.activity.ServerCfgActivity"></activity>
    </application>

</manifest>